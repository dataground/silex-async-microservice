{
    "name": "silex-base",
    "description": "Silex skeleton with Behat, PHPSpec, PHPUnit and RabbitMQ producer + consumer.",
    "license": "MIT",
    "keywords": ["silex", "microservice", "ddd", "behat", "phpspec", "phpunit", "rabbitmq"],
    "authors": [
        {
            "name": "Jose Manuel Garcia Maleno",
            "email": "jmgarciamaleno@gmail.com"
        }
    ],
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "stable",
    "require": {
        "silex/silex": "1.3.*",
        "symfony/console": "2.8.*",
        "symfony/monolog-bridge": "3.0.*",
        "php-amqplib/php-amqplib": "2.6.*",
        "guzzlehttp/guzzle": "6.1.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "behat/behat": "3.0.*",
        "behat/mink-extension": "2.2.*",
        "behat/mink-goutte-driver": "1.2.*",
        "phpspec/phpspec": "2.4.*",
        "phpunit/phpunit": "5.2.*"
    }
}
